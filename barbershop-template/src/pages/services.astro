---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Services | Barber Studio">
  <h2 class="text-3xl font-bold mb-10 text-center">Our Services</h2>

  <div class="grid md:grid-cols-3 gap-8 text-center">
    <div class="border border-gray-700 p-6">
      <h3 class="text-xl font-semibold mb-2">Haircut</h3>
      <p class="text-gray-400">Clean, modern cuts tailored to your style.</p>
    </div>
    <div class="border border-gray-700 p-6">
      <h3 class="text-xl font-semibold mb-2">Beard Trim</h3>
      <p class="text-gray-400">Sharp shaping and grooming.</p>
    </div>
    <div class="border border-gray-700 p-6">
      <h3 class="text-xl font-semibold mb-2">Full Grooming</h3>
      <p class="text-gray-400">Haircut, beard, and finishing touches.</p>
    </div>
  </div>
</BaseLayout>
